<div class="container">
  <%= render 'shared/banner' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="list text-center">
      <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>
        <h1>Cocktail menu</h1>
        <hr/>
        <% @cocktails.each do |cocktail| %>
        <tr>
          <div class = "cocktail">
            <td><%= link_to cocktail.name, cocktail %></td>
          </div>
        </tr>
        <% end %>
      </div>
      <div class = "cocktail text-center">
        <%=  link_to 'New Cocktail', new_cocktail_path %>
      </div>
    </div>
  </div>
</div>
